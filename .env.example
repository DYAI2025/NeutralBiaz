# LLM Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_PROVIDER=openai  # openai, anthropic, azure
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
REDIS_URL=redis://localhost:6379/0

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
CACHE_TTL_SECONDS=3600
REQUEST_TIMEOUT_SECONDS=30

# Security
SECRET_KEY=your_secret_key_here
ENABLE_API_KEY_AUTH=false
API_KEYS=key1,key2,key3

# Logging
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Cultural Models
HOFSTEDE_DATA_PATH=./config/culture_profiles/hofstede/
DEFAULT_CULTURE=DE
SUPPORTED_CULTURES=DE,EN,US,JP,CN,FR,IT,ES

# Bias Detection
BIAS_TAXONOMY_PATH=./config/bias_families.json
CONFIDENCE_THRESHOLD=0.7
SEVERITY_THRESHOLD=3.0

# Development
ENVIRONMENT=development
DEBUG=true